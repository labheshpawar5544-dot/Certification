<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="automation selenium" parallel="tests" thread-count="5">

 <!-- Firefox run: TestScenario2 -->
  <test name="Firefox Scenario2">
    <parameter name="browser" value="Firefox"/>
    <parameter name="browserVersion" value="latest"/>
    <parameter name="platform" value="Windows 10"/>
    <classes>
      <class name="testcases.CertificationTest">
        <methods>
          <include name="TestScenario_01"/>
           <include name="TestScenario_02"/>
        </methods>
      </class>
    </classes>
  </test>

  <!-- Chrome run: only TestScenario1 -->
  <test name="Chrome Scenario1">
    <parameter name="browser" value="Chrome"/>
    <parameter name="browserVersion" value="latest"/>
    <parameter name="platform" value="Windows 11"/>
    <classes>
      <class name="testcases.CertificationTest">
        <methods>
         <include name="TestScenario_03"/>
        </methods>
      </class>
    </classes>
  </test>

</suite>
